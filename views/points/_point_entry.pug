.point-entry.col-12
  img.trash(src="/images/trash.png")

  .activity
    input(type="hidden", name="activity" , value=activity._id)
    .activity-name= activity.name
    .activity-description= `${activity.description}, ${activity.points} points for every ${activity.scale} ${activity.unit.name}`

  .fieldset
    label(for="numOfUnits")= `${activity.unit.name}s`
    input.num-of-units(type="text", name="numOfUnits")

  .points-label #[span.calculated-points 0] POINTS
  input.calculatedPoints(type="hidden", name="calculatedPoints", value="0")