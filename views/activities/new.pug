include ../layout.pug

h1 Add an activity

form(action='/activities' method='POST')
	| Name
	input(name='name' type='text' required)
	| Number of Points
	input(name='numberOfPoints' type='number' required)
	| Scale
	input(name='scale' type='number' required)
	| Unit
	select(name="unitId")
		each unit in units
			option(value=unit._id)= unit.name + ', ' + unit.abbreviation

	input(type='submit' value='Add Activity')

h2 All Activities

each activity in activities
	p= "Name: " + activity.name
	p= "Number of Points: " + activity.numberOfPoints
	p= "Scale: " + activity.scale
	p= "Unit: " + activity.unitId.name
